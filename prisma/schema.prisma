generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  kindeId   String   @unique
  email     String   @unique
  firstName String
  lastName  String
  profile   Profile?
  company   Company?
}

model Profile {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  user         User          @relation(fields: [userId], references: [id])
  userId       String        @unique @db.ObjectId
  resume       Bytes?
  applications Int           @default(0)
  application  Application[]
}

model Company {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  user        User          @relation(fields: [userId], references: [id])
  userId      String        @unique @db.ObjectId
  companyName String        @unique
  listings    Int           @default(0)
  listing     Listing[]
  application Application[]
}

model Application {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  applicants   Profile  @relation(fields: [applicantsId], references: [id])
  applicantsId String   @db.ObjectId
  requests     Company  @relation(fields: [requestsId], references: [id])
  requestsId   String   @db.ObjectId
  listingId    String
  createdAt    DateTime @default(now())

  @@unique([applicantsId, listingId])
}

model Listing {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  listings    Company    @relation(fields: [listingsId], references: [id])
  listingsId  String     @db.ObjectId
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  published   Boolean    @default(false)
  title       String
  department  String
  location    String
  type        String
  companyName String
  companyId   String
  application Int        @default(0)
  requests    Requests[]

  @@unique([listingsId, title])
}

model Requests {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  requests   Listing @relation(fields: [requestsId], references: [id])
  requestsId String  @unique @db.ObjectId
  applicant  String
}
